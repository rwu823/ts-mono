{
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitUseStrict": true,
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
