{
  "name": "ts-mono",
  "version": "4.5.5-22.2.23",
  "description": "The infrastructure of TypeScript project",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "defaults",
    "last 2 versions",
    "not < 1.2%"
  ],
  "lint-staged": {
    "(*.{ts,tsx,js,mjs,cjs}|package.json)": "yarn lint --fix",
    "*.{css,tsx,js,jsx}": "stylelint --fix",
    "*.{ts,tsx,json}": "bash -c tsc"
  },
  "author": "Rocky Wu <rwu823@gmail.com>",
  "repository": "git@github.com:rwu823/ts-mono.git",
  "license": "MIT",
  "scripts": {
    "test:ci": "jest --ci --no-cache --bail --changedSince=origin/main --maxWorkers=4",
    "rm-pkg": "rm -rf node_modules packages/*/node_modules yarn.lock",
    "transcrypt": "curl -s https://raw.githubusercontent.com/elasticdog/transcrypt/master/transcrypt | bash -s --",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --ext .ts,.tsx,.js,.mjs,.cjs",
    "deploy": "pnpm run -F ts-base -F *-config -F dev-react -F graphql deploy",
    "postinstall": "husky install & browserslist --update-db",
    "svgr": "npx @svgr/cli svgr -d svgr/out --no-index"
  },
  "graphql": {
    "schema": "http://localhost:3000/api/gql"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "0.37.2",
    "@ts-mono/dev-react": "workspace:./packages/dev-react",
    "@ts-mono/eslint-config": "workspace:./packages/eslint-config",
    "@ts-mono/ts-base": "workspace:./packages/ts-base",
    "@types/fs-extra": "9.0.13",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "@vitest/ui": "0.7.12",
    "browserslist": "4.20.2",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-jest-dom": "4.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "5.1.0",
    "eslint-plugin-unicorn": "41.0.1",
    "esno": "0.14.1",
    "fast-glob": "3.2.11",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "postcss": "8.4.12",
    "postcss-syntax": "0.36.2",
    "prettier": "2.6.1",
    "sh-exec": "2.1.0",
    "stylelint": "14.6.1",
    "stylelint-config-standard": "25.0.0",
    "stylelint-no-unsupported-browser-features": "5.0.3",
    "stylelint-order": "5.0.0",
    "typehole": "1.7.0",
    "typescript": "4.6.3",
    "vitest": "0.7.12"
  }
}
