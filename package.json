{
  "name": "ts-mono",
  "version": "4.5.5-22.2.23",
  "description": "The infrastructure of TypeScript project",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "defaults",
    "last 2 versions",
    "not < 1.2%"
  ],
  "lint-staged": {
    "(*.{ts,tsx,js,mjs,cjs}|package.json)": "yarn lint --fix",
    "*.{ts,tsx,json}": "bash -c tsc"
  },
  "author": "Rocky Wu <rwu823@gmail.com>",
  "repository": "git@github.com:rwu823/ts-mono.git",
  "license": "MIT",
  "scripts": {
    "test:ci": "jest --ci --no-cache --bail --changedSince=origin/main --maxWorkers=4",
    "rm-pkg": "rm -rf node_modules packages/*/node_modules yarn.lock pnpm-lock.yaml",
    "rm-out": "rm -rf out packages/*/out",
    "transcrypt": "curl -s https://raw.githubusercontent.com/elasticdog/transcrypt/master/transcrypt | bash -s --",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --ext .ts,.tsx,.js,.mjs,.cjs",
    "postinstall": "simple-git-hooks & browserslist --update-db",
    "svgr": "npx @svgr/cli svgr -d svgr/out --no-index"
  },
  "devDependencies": {
    "@appier/design-system-icons": "workspace:*",
    "@total-typescript/ts-reset": "0.4.2",
    "@ts-mono/dev-react": "workspace:*",
    "@ts-mono/eslint-config": "workspace:*",
    "@ts-mono/ts-base": "workspace:*",
    "@types/fs-extra": "11.0.1",
    "@types/node": "18.15.6",
    "@vitest/ui": "0.29.7",
    "browserslist": "4.21.5",
    "concurrently": "7.6.0",
    "eslint": "8.36.0",
    "fast-glob": "3.2.12",
    "fs-extra": "11.1.1",
    "lint-staged": "13.3.0",
    "sh-exec": "2.1.0",
    "simple-git-hooks": "2.8.1",
    "tsx": "3.12.6",
    "typescript": "5.0.2",
    "vitest": "0.29.7",
    "yarnhook": "0.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged -c package.json",
    "post-checkout": "npx yarnhook",
    "post-merge": "npx yarnhook",
    "post-rewrite": "npx yarnhook",
    "preserveUnused": true
  }
}
