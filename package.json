{
  "name": "ts-mono",
  "version": "4.5.5-22.2.23",
  "description": "The infrastructure of TypeScript project",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "defaults",
    "last 2 versions",
    "not < 1.2%"
  ],
  "lint-staged": {
    "(*.{ts,tsx,js,mjs,cjs}|package.json)": "yarn lint --fix",
    "*.{css,tsx,js,jsx}": "stylelint --fix",
    "*.{ts,tsx,json}": "bash -c tsc"
  },
  "author": "Rocky Wu <rwu823@gmail.com>",
  "repository": "git@github.com:rwu823/ts-mono.git",
  "license": "MIT",
  "scripts": {
    "test:ci": "jest --ci --no-cache --bail --changedSince=origin/main --maxWorkers=4",
    "rm-pkg": "rm -rf node_modules packages/*/node_modules yarn.lock pnpm-lock.yaml",
    "transcrypt": "curl -s https://raw.githubusercontent.com/elasticdog/transcrypt/master/transcrypt | bash -s --",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --ext .ts,.tsx,.js,.mjs,.cjs",
    "deploy": "pnpm run -F ts-base -F *-config -F dev-react -F graphql deploy",
    "postinstall": "husky install & browserslist --update-db",
    "svgr": "npx @svgr/cli svgr -d svgr/out --no-index"
  },
  "devDependencies": {
    "@iconify-json/bx": "1.1.3",
    "@iconify-json/mdi": "1.1.30",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@ts-mono/dev-react": "workspace:./packages/dev-react",
    "@ts-mono/eslint-config": "workspace:./packages/eslint-config",
    "@ts-mono/ts-base": "workspace:./packages/ts-base",
    "@types/fs-extra": "9.0.13",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "@unocss/cli": "0.45.6",
    "@unocss/preset-icons": "0.45.6",
    "@unocss/preset-uno": "0.45.6",
    "@vitest/ui": "0.21.1",
    "browserslist": "4.21.3",
    "concurrently": "7.3.0",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-deprecation": "1.3.2",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-jest-dom": "4.0.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "5.6.0",
    "eslint-plugin-unicorn": "43.0.2",
    "fast-glob": "3.2.11",
    "fs-extra": "10.1.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "postcss-syntax": "0.36.2",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "sh-exec": "2.1.0",
    "stylelint": "14.14.0",
    "stylelint-config-standard": "27.0.0",
    "stylelint-no-unsupported-browser-features": "5.0.3",
    "stylelint-order": "5.0.0",
    "tailwindcss": "3.1.8",
    "tsx": "3.8.2",
    "typescript": "4.7.4",
    "unocss": "0.45.6",
    "vitest": "0.21.1"
  }
}
