{
  "name": "ts-mono",
  "version": "3.9.3-20.5.20",
  "description": "The infrastructure of TypeScript project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
  "author": "Rocky Wu <rwu823@gmail.com>",
  "repository": "git@github.com:rwu823/ts-mono.git",
  "license": "MIT",
  "scripts": {
    "test:ci": "jest --ci --no-cache --bail --changedSince=origin/master --maxWorkers=4",
    "rm-pkg": "rm -rf node_modules packages/*/node_modules yarn.lock",
    "transcrypt": "curl -s https://raw.githubusercontent.com/elasticdog/transcrypt/master/transcrypt | bash -s --",
    "lint": "eslint . --ignore-path .gitignore --ext .ts,.tsx"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.0.1",
    "@typescript-eslint/parser": "3.0.1",
    "eslint": "7.1.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-compat": "3.7.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.3",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "sh-exec": "2.1.0",
    "ts-jest": "26.0.0",
    "ts-node": "8.10.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.3",
    "styled-components": "5.1.1"
  }
}
