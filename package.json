{
  "name": "ts-mono",
  "version": "4.5.5-22.2.23",
  "description": "The infrastructure of TypeScript project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "defaults",
    "last 2 versions",
    "not < 1.2%"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": "yarn lint --fix",
    "*.{css,tsx,js,jsx}": "stylelint --fix"
  },
  "author": "Rocky Wu <rwu823@gmail.com>",
  "repository": "git@github.com:rwu823/ts-mono.git",
  "license": "MIT",
  "scripts": {
    "test:ci": "jest --ci --no-cache --bail --changedSince=origin/main --maxWorkers=4",
    "rm-pkg": "rm -rf node_modules packages/*/node_modules yarn.lock",
    "transcrypt": "curl -s https://raw.githubusercontent.com/elasticdog/transcrypt/master/transcrypt | bash -s --",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --ext .ts,.tsx,.js,.mjs",
    "deploy": "ts-node -T scripts/deploy",
    "deploy:pkg": "pnpm -F ts-base -F *-config -F dev-react deploy",
    "prepare": "husky install & browserslist --update-db"
  },
  "graphql": {
    "schema": "http://localhost:3000/api/gql"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "0.37.2",
    "@ts-mono/eslint-config": "workspace:./packages/eslint-config",
    "@ts-mono/ts-base": "workspace:./packages/ts-base",
    "@types/fs-extra": "9.0.13",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "browserslist": "4.19.3",
    "eslint": "8.9.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest-dom": "4.0.1",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "5.0.5",
    "eslint-plugin-unicorn": "41.0.0",
    "fast-glob": "3.2.11",
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "postcss-syntax": "0.36.2",
    "prettier": "2.5.1",
    "sh-exec": "2.1.0",
    "stylelint": "14.5.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-no-unsupported-browser-features": "5.0.3",
    "stylelint-order": "5.0.0",
    "ts-node": "10.5.0",
    "typehole": "1.7.0",
    "typescript": "4.5.5"
  }
}
