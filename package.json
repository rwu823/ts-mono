{
  "name": "ts-mono",
  "version": "4.3.4-21.6.27",
  "description": "The infrastructure of TypeScript project",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs}": "yarn lint --fix",
    "*.{css,tsx,js,jsx}": "stylelint --fix"
  },
  "author": "Rocky Wu <rwu823@gmail.com>",
  "repository": "git@github.com:rwu823/ts-mono.git",
  "license": "MIT",
  "scripts": {
    "test:ci": "jest --ci --no-cache --bail --changedSince=origin/main --maxWorkers=4",
    "rm-pkg": "rm -rf node_modules packages/*/node_modules yarn.lock",
    "transcrypt": "curl -s https://raw.githubusercontent.com/elasticdog/transcrypt/master/transcrypt | bash -s --",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.mjs",
    "deploy": "ts-node -T scripts/deploy",
    "prepare": "husky install"
  },
  "graphql": {
    "schema": "http://localhost:3000/api/gql"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "0.37.2",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "eslint": "8.9.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest-dom": "4.0.1",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "5.0.5",
    "eslint-plugin-unicorn": "40.1.0",
    "postcss-syntax": "0.36.2",
    "prettier": "2.5.1",
    "sh-exec": "2.1.0",
    "stylelint": "14.5.0",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-no-unsupported-browser-features": "5.0.2",
    "stylelint-order": "5.0.0",
    "type-fest": "2.11.2",
    "typehole": "1.7.0"
  }
}
