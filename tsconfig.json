{
  "compilerOptions": {
    "types": [
      "vitest/globals"
    ],
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "outDir": "out",
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsxdev"
  },


  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.*.ts",
    "**/.*.tsx",

    "**/*.cjs",
    "**/.*.cjs",
    "**/*.js",
    "**/.*.js"
  ],
  "exclude": [
    "node_modules",
    "**/out"
  ]
}
