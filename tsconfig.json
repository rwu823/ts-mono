{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@ts-mono/*": ["packages/*"]
    },
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "references": [
    {
      "path": "./packages/dev-react",
    },
  ]
}
