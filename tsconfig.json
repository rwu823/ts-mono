{
  "exclude": ["node_modules", "out/**/*", "**/*.spec.ts", "**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ts-mono/*": ["packages/*"]
    },

    /* =Strict Type-Checking Options */
    "strict": true,

    "incremental": true,
    // "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "noEmit": true,

    /* =Basic Options */
    "target": "ES6",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    // "jsx": "react-jsx",

    /* =import .json */
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "outDir": "out",
    "module": "CommonJS",
    "newLine": "lf",

    /* =Additional Checks */
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
  },
  "references": [
    {
      "path": "./packages/ts-base"
    },
    {
      "path": "./packages/storybook"
    },
    {
      "path": "./packages/dev-react",
    },
    {
      "path": "./packages/dev-pptr",
    },
  ]
}
