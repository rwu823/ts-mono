{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "noEmit": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "composite": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "../../@types/global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "../../graphql.config.ts"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
