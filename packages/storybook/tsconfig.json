{

  "include": [
    ".storybook/*",
    "**/*.ts",
    "**/*.tsx",
  ],

  "compilerOptions": {
    "strict": true,
    "noImplicitUseStrict": true,
    "alwaysStrict": false,

    "allowSyntheticDefaultImports": true,

    "target": "es6",
    "lib": [
      "dom",
      "esnext",
    ],

    // for babel
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "react",

    "skipLibCheck": true,

    // import json
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "outDir": "out",
    "module": "commonjs",
    "newLine": "lf",

    "removeComments": true,

    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
  }
}
