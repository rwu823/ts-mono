{
  "compilerOptions": {
    "strict": true,
    "noImplicitUseStrict": true,
    "alwaysStrict": false,

    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "outDir": "out",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "public",
    ".cache"
  ]
}
